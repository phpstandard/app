{
    "name": "phpstandard/app",
    "description": "Example application skeleton for PHP Standard Framework",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Vusal Orujov",
            "email": "or.vusal@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "vlucas/phpdotenv": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.9",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "scripts": {
        "phpstan": "phpstan analyse",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf -v",
        "phpmd": "phpmd src ansi phpmd.xml --suffixes=php",
        "unit-test": "phpunit",
        "code-coverage": "phpunit --coverage-html coverage",
        "analyse": [
            "@phpstan",
            "@phpcs",
            "@phpmd",
            "@unit-test"
        ],
        "fix": [
            "@phpcbf"
        ]
    }
}